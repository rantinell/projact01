<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security 
						http://www.springframework.org/schema/security/spring-security.xsd
						http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="customAccessDenied" class="com.team1.security.CustomAccessDeniedHandler" ></bean>
	
	<bean id="customLoginSuccess" class="com.team1.security.CustomLoginSuccessHandler" ></bean>

	<bean id="bcryptPasswordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder" ></bean>

	<bean id="customUserDetailsService" class="com.team1.security.CustomUserDetailsService" ></bean>

 
	<security:http>

		<!-- <security:intercept-url pattern="/movie/home" access="permitAll" /> -->
		<security:intercept-url pattern="/movie/home" access="permitAll" />

		<!-- <security:intercept-url	pattern="/movie/member/home" access="hasRole('ROLE_MEMBER')" /> -->
		<security:intercept-url	pattern="/movie/home" access="hasRole('ROLE_MEMBER')" />

		<!-- <security:intercept-url pattern="/movie/manager" access="hasRole('ROLE_MANAGER')" /> -->
		<security:intercept-url pattern="/movie/home" access="hasRole('ROLE_MANAGER')" />

		<!-- <security:intercept-url pattern="/movie/admin" access="hasRole('ROLE_ADMIN')" /> -->
		<security:intercept-url pattern="/movie/home" access="hasRole('ROLE_ADMIN')" />

	<!-- 	<security:access-denied-handler	ref="customAccessDeniedHandler" /> -->

		<security:form-login login-page="/movie/member/loginForm"/>

		<security:access-denied-handler ref="customAccessDenied"/>

		<security:csrf disabled="true"/>

		<security:logout logout-url="/customLogout"	invalidate-session="true" />

		<security:remember-me data-source-ref="dataSource" token-validity-seconds="604800" />

		<!-- <security:logout logout-url="#" invalidate-session="true" delete-cookies="remember-me,JSESSION_ID" /> -->

	</security:http>


	<security:authentication-manager>

		<security:authentication-provider user-service-ref="customUserDetailsService">

			<security:password-encoder ref="bcryptPasswordEncoder" />

		</security:authentication-provider>

	</security:authentication-manager>

</beans>
